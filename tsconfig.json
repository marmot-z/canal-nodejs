{
    "include": ["src/**/*.ts"],
    "compileOnSave": true,
    "compilerOptions": {        
        "target": "ES2015",
        "module": "CommonJS",
        "outDir": "./dist",
        "allowJs": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
    }
}